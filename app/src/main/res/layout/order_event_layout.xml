<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.protichi.hestia_first.order_event_layout"
    android:paddingTop="70dp"
    android:paddingRight="5dp" android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/breakfast_time"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/breakfast"
                android:text="Breakfast Order"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/num_break"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/lunch_time"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/lunch"
                android:text="Lunch Order"
                android:textSize="20dp"/>


            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/num_lunch"
                android:textSize="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/dinner_time"
                android:textSize="20dp"/>



            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/dinner"
                android:text="Dinner Order"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/num_dinner"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>






</RelativeLayout>